<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_empty="true">
        <layer-list>
            <item
                android:left="0dp"
                android:right="10dp"
                android:top="40dp"
                android:bottom="40dp"
                android:drawable="@drawable/baseline_keyboard_arrow_right_white_24dp">
            </item>
        </layer-list>
    </item>

    <item android:state_expanded="true">
        <layer-list>
            <item
                android:left="0dp"
                android:right="10dp"
                android:top="40dp"
                android:bottom="40dp"
                android:drawable="@drawable/baseline_keyboard_arrow_down_white_24dp">
            </item>
        </layer-list>
    </item>
</selector>