<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="550dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgPoster"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/poster"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtMinAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="C18"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:background="@drawable/border_background_primary_color"
                android:layout_margin="20dp"
                />

            <LinearLayout
                android:background="@drawable/bg_transparent_black"
                android:layout_alignParentBottom="true"
                android:paddingBottom="25dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ĐANG CHIẾU"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Captain Marvel"
                        android:textSize="28sp"/>

                    <Button
                        android:id="@+id/btnBookTicket"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="MUA VÉ"
                        android:background="@drawable/border_background_primary_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="8.1"
                android:textSize="15sp"
                android:background="@drawable/border_background_dark_color"
                android:layout_margin="20dp"
                />


        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>