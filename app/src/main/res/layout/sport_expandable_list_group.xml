<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPoster"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtEventName"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Việt Nam vs. Thái Lan"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="01/06/2019"
                android:textColor="@color/textColorPrimaryDark"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="VFF - Liên đoàn bóng đá Việt Nam"
                android:textColor="@color/textColorPrimaryDark"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="ĐTQG Việt Nam vs. ĐTQG Thái Lan | Vòng bán kết lượt đi AFF Suzuki Cup 2019"
                android:textColor="@color/textColorPrimaryDark"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bb_tabletRightBorderDark"/>

</LinearLayout>